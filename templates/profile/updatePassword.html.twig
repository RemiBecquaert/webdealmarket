{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Modifier mon mot de passe{% endblock %}

{% block body %}
{{ parent() }}


<div class="container mt-4 mb-4">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h2 class="text-primary text-center"><strong>Modifier mon mot de passe</strong></h2>
            <hr class="featurette-divider text-light">    
                {{form_start(form, {'attr':{'class':'text-center'}})}}

                {{form_label(form.plainPassword.first, 'Saisir un mot de passe', {'label_attr':{'class':'fw-bold text-dark'}})}}
                {{form_widget(form.plainPassword.first, {'attr':{'class':'form-control text-dark', 'placeholder':'Mot de passe', 'maxlength':'50'}})}}
                <div id="passwordHelpBlock" class="form-text text-dark">
                Le mot de passe doit contenir au minimum 8 caractères avec un chiffre et un caractère spécial au minimum.
                </div>
                {{form_label(form.plainPassword.second, 'Confirmer le mot de passe', {'label_attr':{'class':'fw-bold text-dark'}})}}
                {{form_widget(form.plainPassword.second, {'attr':{'class':'form-control text-dark', 'placeholder':'Confirmer le mot de passe', 'maxlength':'50'}})}}

                {{form_widget(form.envoyer, {'label':"Modifier mon mot de passe", 'attr':{'class':'btn btn-outline-primary mt-3'}})}}
                {{form_end(form, {render_rest: true})}} 
        </div>
    </div>
</div>
{% endblock %}
