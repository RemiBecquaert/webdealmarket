{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Gérer mes adresses{% endblock %}

{% block body %}
{{parent()}}

{% set number = 0 %}

<div class="container p-4">
    <a href="{{path('app_profile')}}" class="btn btn-md btn-outline-primary float-end">Retour au profil</a>
    <a href="{{path('app_address_add')}}" class="btn btn-md btn-outline-primary float-end">Ajouter une adresse</a>
    <h2><strong>Gérer vos adresses</strong></h2>
    <div class="row">
        {% if app.user.addresses|length == 0 %}
            <hr>
            <h5>Vous n'avez pas encore ajouté d'adresse de livraison, veuillez en <a href="{{path('app_address_add')}}">ajouter une</a>.</h5>
        {% else %}
            <hr>
                <div class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                    <div class="d-flex gap-2 w-100 justify-content-center text-center">
                        <div>
                    {% for adresse in adresse %}
                    {% set number = number + 1 %}
                    {{number}} <a class="text-dark" href="{{path('app_address_management', {'id':adresse.id})}}">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                            </svg>
                                        </a>
                        <p><h5><em><i class="fa-regular fa-house"></i> {{adresse.name}}</em></h5><br/>{{adresse.address}} {{adresse.postal}} {{adresse.city}}, {{adresse.country}}
                        <br/>Numéro de téléphone de contact: {{adresse.phone}}</p>
                        <hr class="col-md-12">
                    {% endfor %}
                        </div>
                    </div>
                </div>
        {% endif %}
    </div>
    <a href="{{path('app_profile')}}" class="btn btn-md btn-outline-primary">Retour au profil</a>
</div>


{% endblock %}
