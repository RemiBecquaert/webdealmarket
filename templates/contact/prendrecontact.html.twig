{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Prendre contact{% endblock %}

{% block body %}
{{ parent() }}

<div class="container mt-4">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h2 class="text-dark text-center"><strong>Formulaire de contact Web Deal Market</strong></h2>
            <hr class="featurette-divider text-light">    

                {{form_start(form, {'attr':{'class':'text-center'}})}}

                {{form_label(form.email, 'Saisir votre adresse-mail', {'label_attr':{'class':'fw-bold text-dark'}})}}
                {{form_widget(form.email, {'attr':{'class':'form-control text-dark', 'placeholder':'Votre adresse-mail', 'maxlength':'80', 'type':'email'}})}}

                {{form_label(form.nom, 'Saisir votre nom', {'label_attr':{'class':'fw-bold text-dark'}})}}
                {{form_widget(form.nom, {'attr':{'class':'form-control text-dark', 'placeholder':'Votre nom', 'maxlength':'50'}})}}

                {{form_label(form.prenom, 'Saisir votre prénom', {'label_attr':{'class':'fw-bold text-dark'}})}}
                {{form_widget(form.prenom, {'attr':{'class':'form-control text-dark', 'placeholder':'Votre prénom', 'maxlength':'50'}})}}

                {{form_label(form.idSujet, 'Objet du message', {'label_attr':{'class':'fw-bold text-dark'}})}}
                {{form_widget(form.idSujet, {'attr':{'class':'form-control text-dark', 'placeholder':'Objet', 'maxlength':'100'}})}}

                {{form_label(form.texte, 'Saisir votre message', {'label_attr':{'class':'fw-bold text-dark'}})}}
                {{form_widget(form.texte, {'attr':{'class':'form-control text-dark', 'placeholder':'Votre message'}})}}

                {{form_widget(form.envoyer, {'label':"Envoyer la demande de contact", 'attr':{'class':'btn btn-outline-primary mt-3'}})}}
                {{form_end(form, {render_rest: true})}} 
        </div>
    </div>
</div>

<div class="container mt-4 mb-4">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
            <div class="d-flex justify-content-center">
                <h2 class="text-dark"><strong>Horaires d'ouverture du magasin</strong></h2>
            </div>    
            <br/>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Lundi: 14:00-19:00</li>
                <li class="list-group-item">Mardi: 10:00-12:00, 14:00-19:00</li>
                <li class="list-group-item">Mercredi: 10:00-12:00, 14:00-19:00</li>
                <li class="list-group-item">Jeudi: 10:00-12:00, 14:00-19:00</li>
                <li class="list-group-item">Vendredi: 10:00-12:00, 14:00-19:00</li>
                <li class="list-group-item">Samedi: 10:00-12:00, 14:00-19:00</li>
                <li class="list-group-item">Dimanche: FERMÉ</li>
            </ul>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
            <div class="d-flex justify-content-center mt-2 mb-2">
                <h2 class="text-dark"><strong>Adresse du magasin</strong></h2>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">651 boulevard Raymond Poincaré</li>
                <li class="list-group-item"><strong>62400 BÉTHUNE</strong></li>
            </ul>
            <div class="embed-responsive embed-responsive-16by9 d-flex justify-content-center p-2">
                <iframe class="embed-responsive-item" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2536.611145681233!2d2.638457715596987!3d50.522801679485454!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47dd231b176dbee7%3A0x21add4702b14f3b7!2sWEB%20DEAL%20MARKET!5e0!3m2!1sfr!2sfr!4v1672823684864!5m2!1sfr!2sfr" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</div>
{% endblock %}
