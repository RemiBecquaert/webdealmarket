{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Rendez-vous n°{{ booking.id }}{% endblock %}

{% block body %}
{{ parent() }}
    <h2 class="text-dark text-center mt-2">Modifier le rendez-vous n°{{ booking.id }}</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Rendez-vous n°</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Date souhaitée</th>
                <td>{{ booking.beginAt ? booking.beginAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ booking.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_booking_index') }}">Retour à la liste</a>

    <a href="{{ path('app_booking_edit', {'id': booking.id}) }}">Valider le rendez-vous</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
